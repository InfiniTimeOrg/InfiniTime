FROM node:14

VOLUME /mnt

RUN npm i lv_font_conv -g

ADD https://download.jetbrains.com/fonts/JetBrainsMono-2.225.zip .
ADD https://lvgl.io/assets/others/FontAwesome5-Solid+Brands+Regular.woff .

RUN unzip JetBrainsMono-2.225.zip

CMD lv_font_conv \
    --size 20 \
    --bpp 1             `# bit per pixel`\
    --format lvgl \
    --output /mnt/jetbrains_mono_bold_20.c \
    --font fonts/ttf/JetBrainsMono-Bold.ttf \
    --range 0x20-0x7f,0x410-0x44f \
    --font FontAwesome5-Solid+Brands+Regular.woff \
    --range "\
0xf293,0xf294,0xf244,0xf240,0xf242,0xf243,0xf241,0xf54b,0xf21e,0xf1e6,\
0xf54b,0xf017,0xf129,0xf03a,0xf185,0xf560,0xf001,0xf3fd,0xf069,0xf1fc,\
0xf45d,0xf59f,0xf5a0,0xf029,0xf027,0xf028,0xf6a9,0xf04b,0xf04c,0xf048,\
0xf051,0xf095,0xf3dd,0xf04d,0xf2f2,0xf024,0xf252,0xf569"
